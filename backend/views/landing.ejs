    .bg-blur {
    /* background: url('backend/background.jpeg') !important; */
    background: url('https://images.unsplash.com/photo-1739609579483-00b49437cc45?q=80&w=3871&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') !important;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    filter: blur(5px);
    z-index: -1;
}

/* Foreground Content */
.content {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-align: center;
    z-index: 1;
    padding: 20px;
}

/* Optional: Semi-transparent overlay */
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5); /* Dark overlay */
    z-index: 0;
}

/* Custom Button */
.custom-btn {
    background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%) !important;
    color: white !important;
    border-radius: 20px; 
    padding: 10px 20px; 
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.3s ease-in-out;
}

/* Button Hover Effect */
.custom-btn:hover {
    opacity: 0.8;
    transform: scale(1.05);
}

/* Navbar Styling */
.nav-edit {
    color: white !important;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease-in-out;
}

/* Navbar Hover Effect */
.nav-edit:hover {
    color: #ffcc00 !important;
}

</style>

